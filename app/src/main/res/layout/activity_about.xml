<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kyle.dotapicker.AboutActivity">

    <TextView
        android:text="Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/hero_name"
        android:textStyle="bold"
        android:id="@+id/credit_header" />

    <TextView
        android:text="Programming: Kyle Holt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/credit_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/credit_text" />

    <TextView
        android:text="Icons by: Erskin Cherry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/credit_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/credit_text2" />

    <TextView
        android:text="Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/credit_text"
        android:layout_toEndOf="@+id/credit_text"
        android:layout_marginStart="34dp"
        android:textColor="@color/colorPrimary"

        android:id="@+id/my_email" />

    <TextView
        android:text="Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/credit_text2"
        android:layout_alignStart="@+id/my_email"
        android:textColor="@color/colorPrimary"
        android:id="@+id/erskin_contact" />
</RelativeLayout>
